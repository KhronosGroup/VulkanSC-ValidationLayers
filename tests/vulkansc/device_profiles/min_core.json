{
    "$schema": "https://schema.khronos.org/vulkansc/profiles-devsim.json#",
    "profiles": {
        "MIN_CORE": {
            "version": 1,
            "api-version": "1.0.12",
            "label": "Min Vulkan SC Core",
            "description": "Min Vulkan SC Core profile",
            "contributors": {},
            "history": [
                {
                    "revision": 1,
                    "date": "2023-09-13",
